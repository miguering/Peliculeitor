<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#727A85" />
            <gradient android:angle="90" android:startColor="#dce1e7" android:endColor="#727A85"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#727A85" />
            <solid android:color="#727A85"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#727A85" />
            <gradient android:angle="90" android:startColor="#727A85" android:endColor="#727A85" />
        </shape>
    </item>
</selector>